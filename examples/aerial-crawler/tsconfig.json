{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "lib": [
      "es2015.promise",
      "dom",
      "es6"
    ],
    "module": "commonjs",
    "outDir": "out",
    "baseUrl": "src",
    "experimentalDecorators": true,
    "jsx": "react"
  },
  "types": [
    "sift",
    "get-port"
  ],
  "exclude": [
    "node_modules",
    "*-test",
    "old",
    "out",
    "dist",
    "integrations",
    "examples"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "rootDirs": [
    "src",
    "node_modules"
  ]
}