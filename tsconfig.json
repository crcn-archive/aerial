{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "lib": [
      "es2015.promise",
      "dom",
      "es6"
    ],
    "module": "commonjs",
    "outDir": "lib",
    "baseUrl": "src/packages",
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "*-test",
    "lib",
    "index.ts"
  ],
  "filesGlob": [
    "./src/**/*.ts"
  ],
  "rootDirs": [
    "src",
    "node_modules"
  ]
}