{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "lib": [
      "es2015.promise",
      "dom",
      "es5",
      "esnext"
    ],
    "module": "commonjs",
    "outDir": "lib",
    "baseUrl": "src",
    "experimentalDecorators": true,
    "paths": {
      "postcss": ["../node_modules/postcss/lib/postcss.d.ts"]
    }
  },
  "exclude": [
    "node_modules",
    "*-test",
    "lib",
    "index.ts"
  ],
  "filesGlob": [
    "./src/**/*.ts"
  ],
  "rootDirs": [
    "src"
  ]
}