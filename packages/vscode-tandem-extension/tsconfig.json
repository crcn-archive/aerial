{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "sourceMap": true,
        "experimentalDecorators": true,
        "baseUrl": "src",
        "rootDir": ".",
        "lib": [
          "es2015.promise",
          "dom",
          "es5",
          "esnext"
        ]
    },
    "exclude": [
        "node_modules",
        "*-test",
        "old",
        "out",
        "integrations",
        "examples"
    ],
    "filesGlob": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}